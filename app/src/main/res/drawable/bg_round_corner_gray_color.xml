<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40252525"/>
            <corners android:radius="6dp"/>
            <gradient
                android:startColor="@color/bgColor"

                android:endColor="@color/black"
                android:type="linear"
                android:angle="270"
                android:gradientRadius="15dp">
            </gradient>
        </shape>
    </item>

    <item
        android:left="-1dp"
        android:right="1dp"
        android:top="0dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/bgColor"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</layer-list>